<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://yastatic.net/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/js/nav-bar.js" type="text/javascript"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Itmo.Dormitory</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/nav-bar.css" />
</head>
<body>
    <header>
        <div class="menu">          
            
            <div class="logout-container">  
	            <a class="logout-button"  asp-area="" asp-controller="Account" asp-action="Logout" >
  	                <img class="user-pic" src="https://pbs.twimg.com/profile_images/378800000639740507/fc0aaad744734cd1dbc8aeb3d51f8729_400x400.jpeg">  
                    <div class="logout">LOGOUT</div>
	            </a>  
            </div>

            <img id ="itmo-logo" src="~/images/ItmoLogo.png" style="margin: 15% 0 0 0"/>
            <ul class="navbar">
                <li class="navbar-item" id="announcements">
                    <div class="check-square"/>
                    <a class="nav-link text-light vertical-center" asp-area="" asp-controller="Announcement" asp-action="Index">
                        <img class="nav-link-img" src="~/images/Announcement.png"/>
                        <p class="nav-link-p">Объявления</p>
                    </a>
                </li>
                <li class="navbar-item" id="applications">
                    <div class="check-square"/>
                    <a class="nav-link text-light vertical-center" asp-area="" asp-controller="Application" asp-action="Index">
                        <img class="nav-link-img" src="~/images/Application.png " />
                        <p class="nav-link-p">Заявления</p>
                    </a>
                </li>
                <li class="navbar-item" id="reservation">
                    <div class="check-square"/>
                    <a class="nav-link text-light vertical-center" asp-area="" asp-controller="Reservation" asp-action="Index">
                        <img class="nav-link-img" src="~/images/Room.png" >
                        <p class="nav-link-p">Бронь комнат</p>
                    </a>
                </li>
            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Itmo.Dormitory - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
